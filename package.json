{
  "name": "vitest-prosemirror",
  "version": "0.3.1",
  "description": "A plugin for Vitest that enables you to write tests using the ProseMirror editor",
  "keywords": [
    "vitest",
    "prosemirror",
    "testing"
  ],
  "homepage": "https://github.com/marekdedic/vitest-prosemirror",
  "bugs": {
    "url": "https://github.com/marekdedic/vitest-prosemirror/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marekdedic/vitest-prosemirror.git"
  },
  "license": "MIT",
  "author": "Marek Dědič",
  "sideEffects": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/vitest-prosemirror.js"
    }
  },
  "module": "dist/vitest-prosemirror.js",
  "types": "dist/vitest-prosemirror.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "vite build",
    "clean": "rimraf dist/*",
    "lint": "run-p -c --aggregate-output lint:*",
    "lint:attw": "attw --pack",
    "lint:eslint": "eslint",
    "prepack": "npm run build",
    "start": "vite build --watch",
    "test": "vitest",
    "test-coverage": "vitest run --coverage"
  },
  "dependencies": {
    "prosemirror-model": "^1.24.1",
    "prosemirror-state": "^1.4.3",
    "prosemirror-view": "^1.38.0",
    "stringify-object": "^6.0.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.0",
    "@eslint/js": "^10.0.1",
    "@eslint/json": "^1.0.0",
    "@eslint/markdown": "^7.0.0",
    "@types/node": "^25.0.2",
    "@types/stringify-object": "^4.0.5",
    "@vitest/coverage-v8": "^4.0.4",
    "@vitest/eslint-plugin": "^1.3.26",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-package-json": "^0.88.0",
    "eslint-plugin-perfectionist": "^5.0.0",
    "eslint-plugin-prefer-arrow-functions": "^3.9.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jsdom": "^28.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.0",
    "prosemirror-commands": "^1.7.1",
    "prosemirror-inputrules": "^1.5.0",
    "prosemirror-keymap": "^1.2.3",
    "prosemirror-schema-basic": "^1.2.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.2.0",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.1",
    "vitest": "^4.0.4"
  },
  "peerDependencies": {
    "vitest": "^2.1.9 || ^3.0.7 || ^4.0.4"
  },
  "peerDependenciesMeta": {
    "vitest": {
      "optional": true
    }
  }
}
